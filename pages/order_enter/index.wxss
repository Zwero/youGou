page {
  background: #f6f6f6;
}

.cart {
  margin-bottom: 100rpx;
}

.address-info {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 100rpx;
}

.address-text {
  padding: 20rpx;
}

.border {
  width: 100%;
  height: 15rpx;
  display: block;
}

.cart-title {
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  border-top: 20rpx #eee solid;
  border-bottom: 1px #ddd solid;
}

.cart_center {
  display: flex;
  padding: 20rpx 15rpx;
  border-bottom: 1px #ddd solid;
  align-items: center;
}

.cart-text {
  margin-right: 40rpx;
}

.allPrice {
  color: red;
}

.cart_center text {
  margin-left: 20rpx;
}

/* 商品内容 */

.goods-item {
  display: flex;
  align-items: center;
  padding: 15rpx;
  border-bottom: 1px solid #ccc;
}

.goods-item .goods-info image {
  width: 150rpx;
  height: 150rpx;
  flex-shrink: 0;
  margin: 0 20rpx;
}

.goods-item .goods-right .goods-title{
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 15rpx;
}

.goods-right text {
  font-size: 13px;
  color: red;
}

.goods-num {
  display: flex;
  justify-content: space-between;
}

.goods-num-size text{
  color: black;
}

.goods-num-size text {
  margin: 0 30rpx;
  line-height: 50rpx;
}


/* 底部结算 */
.footer{
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background:pink;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 18xp;
}